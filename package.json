{
  "name": "ennovatex-ai-platform",
  "version": "1.0.0",
  "description": "A cutting-edge AI platform built with Next.js 15, featuring Samsung-inspired branding and comprehensive AI capabilities",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/Joohhnnyyy/ennovatex-ai-platform-redesign.git"
  },
  "keywords": ["ai", "nextjs", "samsung", "typescript", "tailwindcss", "platform"],
  "author": "EnnovateX Team",
  "license": "MIT",
  "scripts": {
    "dev": "cd src && npm run dev",
    "build": "cd src && npm run build",
    "start": "cd src && npm run start",
    "lint": "cd src && npm run lint",
    "install-frontend": "cd src && npm install",
    "install-backend": "cd src/backend && pip install -r requirements.txt",
    "dev-backend": "cd src/backend && uvicorn app.main:app --reload --host 0.0.0.0 --port 8001",
    "install-all": "npm run install-frontend && npm run install-backend"
  },
  "workspaces": [
    "src"
  ]
}